<Window x:Class="SWTORCombatParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWTORCombatParser"
        mc:Ignorable="d"
        Title="SWTOR Combat Parse" Height="1080" Width="1920">
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".25*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width=".3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".85*"/>
            <RowDefinition Height=".1*"/>
        </Grid.RowDefinitions>
        <TabControl BorderThickness="3,2,3,0" BorderBrush="DimGray" Background="Transparent" Grid.RowSpan="3" Grid.Column="1">
            <TabItem FontSize="25" Padding="15,5,15,5" Header="Graph">
                <ContentPresenter Content="{Binding GraphView}"/>
            </TabItem>
            <TabItem FontSize="25" Padding="15,5,15,5" Header="Table">
                <ContentPresenter Content="{Binding TableView}"/>
            </TabItem>
            <TabItem FontSize="25" Padding="15,5,15,5" Header="Info Logs">
                <ContentPresenter Content="{Binding SoftwareLogView}"/>
            </TabItem>
        </TabControl>

        <ContentPresenter Content="{Binding CombatMetaDataView}" Grid.Column="2" Grid.Row="0"></ContentPresenter>

        <ContentPresenter  Margin="5,5,5,5" Grid.Column="0" Grid.Row="0" Content="{Binding PastCombatsView}"/>

    </Grid>
</Window>
