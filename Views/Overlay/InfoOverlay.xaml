<Window x:Class="SWTORCombatParser.Views.Overlay.InfoOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWTORCombatParser.Views.Overlay"
        mc:Ignorable="d"
        Title="InfoOverlay" Height="150" Width="250" AllowsTransparency="True"  WindowStyle="None" Topmost="True">
    <Window.Background>
        <SolidColorBrush Opacity="0.15" Color="DimGray"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.85*"/>
        </Grid.RowDefinitions>
        <Border Background="Transparent" Grid.Row="0" Grid.RowSpan="2" CornerRadius="5" BorderBrush="LightSteelBlue" BorderThickness="1,0,1,1">
            <Viewbox>
                <ItemsControl ItemsSource="{Binding MetricBars, UpdateSourceTrigger=PropertyChanged}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="0.75*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Text="{Binding PlayerName}"></TextBlock>
                                <Grid Grid.Column="1" HorizontalAlignment="Left">
                                    <Rectangle HorizontalAlignment="Left" Fill="{Binding Type, Converter={StaticResource OverlayMetricTypeToColorConverter}}" Width="{Binding RelativeLength}"></Rectangle>
                                    <TextBlock HorizontalAlignment="Left" Text="{Binding Value}"></TextBlock>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Viewbox>
        </Border>
        <Border Grid.Row="0" Background="LightSteelBlue" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              CornerRadius="5,5,0,0"  MouseLeftButtonDown="DragWindow">
            <Grid>
                <TextBlock Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="10,2,10,2"
            Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=Title}"/>
                <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5" FontSize="7"
                  Width="15" Height="15" Padding="0" Command="ApplicationCommands.Close"/>
            </Grid>
        </Border>

    </Grid>
</Window>
