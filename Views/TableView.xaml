<UserControl x:Class="SWTORCombatParser.Views.TableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWTORCombatParser.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="0.85*"/>
        </Grid.ColumnDefinitions>
        
        <ComboBox Height="50" Margin="5,15,5,0" ItemsSource="{Binding AvailableOrderings}" SelectedItem="{Binding SelectedOrdering}" VerticalAlignment="Top"></ComboBox>
        <TabControl Grid.Column="1">
            <TabItem Header="Damage">
                <ContentPresenter Content="{Binding DamageTableContent}"></ContentPresenter>
            </TabItem>
            <TabItem Header="Healing">
                <ContentPresenter Content="{Binding HealingTableContent}"></ContentPresenter>
            </TabItem>
            <TabItem Header="Damage Taken">
                <ContentPresenter Content="{Binding DamageTakenTableContent}"></ContentPresenter>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
