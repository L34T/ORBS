<UserControl x:Class="SWTORCombatParser.CombatMetaDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWTORCombatParser"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="2" Background="CadetBlue" BorderBrush="DimGray" Margin="2" BorderThickness="2,2,2,2">
            <Viewbox>
                <TextBlock Foreground="LightGray" Text="{Binding CharacterName}" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"></TextBlock>
            </Viewbox>
        </Border>
        <ItemsControl Grid.Row="1" ItemsSource="{Binding CombatMetaDatas}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <DockPanel >
                        <Viewbox>
                            <Border Padding="5,10,5,10" BorderBrush="Black" BorderThickness="1.5" CornerRadius="5" Margin="5,2.5,5,2.5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0" FontSize="25" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,0,0,10" Grid.ColumnSpan="4" Text="{Binding Category}" Foreground="{Binding Color}"></TextBlock>
                                    <TextBlock Grid.Row="1" Grid.Column="0" FontSize="20" HorizontalAlignment="Right" Margin="5,0,5,0" Text="{Binding TotalLabel}" Foreground="WhiteSmoke"></TextBlock>
                                    <TextBlock Grid.Row="1" Grid.Column="1" FontSize="20" HorizontalAlignment="Center" Margin="5,0,5,0" Text="{Binding TotalValue}" Foreground="{Binding Color}"></TextBlock>
                                    <TextBlock Grid.Row="1" Grid.Column="2" FontSize="20" HorizontalAlignment="Right" Margin="5,0,5,0" Text="{Binding MaxLabel}" Foreground="WhiteSmoke"></TextBlock>
                                    <TextBlock Grid.Row="1" Grid.Column="3" FontSize="20" HorizontalAlignment="Center" Margin="5,0,5,0" Text="{Binding MaxValue}" Foreground="{Binding Color}"></TextBlock>
                                    <TextBlock Grid.Row="1" Grid.Column="4" FontSize="20" HorizontalAlignment="Right" Margin="5,0,5,0" Text="{Binding RateLabel}" Foreground="WhiteSmoke"></TextBlock>
                                    <TextBlock Grid.Row="1" Grid.Column="5" FontSize="20" HorizontalAlignment="Center" Margin="5,0,5,0" Text="{Binding RateValue}" Foreground="{Binding Color}"></TextBlock>
                                    <TextBlock Grid.Row="2" Grid.Column="0" FontSize="20" HorizontalAlignment="Right" Margin="5,0,5,0" Text="{Binding EffectiveTotalLabel}" Foreground="WhiteSmoke"></TextBlock>
                                    <TextBlock Grid.Row="2" Grid.Column="1" FontSize="20" HorizontalAlignment="Center" Margin="5,0,5,0" Text="{Binding EffectiveTotalValue}" Foreground="{Binding Color}"></TextBlock>
                                    <TextBlock Grid.Row="2" Grid.Column="2" FontSize="20" HorizontalAlignment="Right" Margin="5,0,5,0" Text="{Binding EffectiveMaxLabel}" Foreground="WhiteSmoke"></TextBlock>
                                    <TextBlock Grid.Row="2" Grid.Column="3" FontSize="20" HorizontalAlignment="Center" Margin="5,0,5,0" Text="{Binding EffectiveMaxValue}" Foreground="{Binding Color}"></TextBlock>
                                    <TextBlock Grid.Row="2" Grid.Column="4" FontSize="20" HorizontalAlignment="Right" Margin="5,0,5,0" Text="{Binding EffectiveRateLabel}" Foreground="WhiteSmoke"></TextBlock>
                                    <TextBlock Grid.Row="2" Grid.Column="5" FontSize="20" HorizontalAlignment="Center" Margin="5,0,5,0" Text="{Binding EffectiveRateValue}" Foreground="{Binding Color}"></TextBlock>
                                </Grid>
                            </Border>
                        </Viewbox>
                    </DockPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>

</UserControl>
