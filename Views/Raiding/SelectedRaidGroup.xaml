<UserControl x:Class="SWTORCombatParser.Views.SelectedRaidGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWTORCombatParser.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="{Binding CurrentlySelectedGroup.Name}"/>
            <Viewbox  VerticalAlignment="Center" Margin="10,5,0,0" MaxHeight="15" MaxWidth="15">
                <Button Content=" X " Command="{Binding RemoveRaidGroupCommand}" Background="OrangeRed"/>
            </Viewbox>
        </StackPanel>
    </Grid>
</UserControl>
